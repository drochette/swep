{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Modèle</th>
            <th>Immatriculation</th>
            <th>Date début</th>
            <th>Date fin</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            {% for booking in bookings %}
                <tr>
                    <td>
                        {{ booking.vehicle.label }}
                    </td>
                    <td>
                        {{ booking.vehicle.registrationNumber }}
                    </td>
                    <td>
                        {{ booking.startAt|date("d/m/Y H:i") }}
                    </td>
                    <td>
                        {{ booking.endAt|date("d/m/Y H:i") }}
                    </td>
                    <td>
                        <a href="{{ path('app_delete_user_booked_vehicle', {'id': booking.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>

            {% endfor %}
        </tbody>

    </table>

{% endblock %}
